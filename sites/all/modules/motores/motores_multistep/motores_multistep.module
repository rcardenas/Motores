<?php

function motores_multistep_block($op = 'list', $delta = 0, $edit = array()) 
{
	switch( $op )
	{
		case 'list':
	      $blocks[0]['info'] = t('Anuncio multistep');
	      return $blocks;
	      break;
	    case 'view':
	      switch ( $delta )
	      {
			    case 0:
	          $blocks['title'] = '';
	          $blocks['content'] = motores_multistep_markup();
	          break;
	      }
	      return $blocks;
	      break;
	}
}

function motores_multistep_markup()
{
  $t[] = t('Marca y modelo');
  $t[] = t('A&ntilde;o y submodelo');
  $t[] = t('Detalles');
  $t[] = t('Fotos');
  $t[] = t('Revisi&oacute;n');
  $t[] = t('Registro');
  $t[] = t('Pago');
  $t[] = t('Tu anuncio listo');
  
  $active = -1;
  if ( strpos($_GET['q'], 'node/add/') >= 0 )
  {
    $active = 0;
  }
  if ( arg(2) == 'edit' )
  {
    $active = arg(3) - 1;
  }
  if ( arg(0) == 'anuncio_preview' )
  {
    $active = 4;
  }
  if ( arg(0) == 'cart' )
  {
    $active = 6;
  }
  if ( arg(1) == '62' )
  {
    $active = 7;
  }
  
  $r = 
  '<div class="multistep-tabs">
    <ul class="clearfix">';

  foreach ( $t as $i => $step )
  {
    $r .= '<li '.(($active == $i)?'class="active">':'>').($i+1).'. '.$step.'</li>';
  }

  $r .= '</ul>
  </div>';
    
  return $r;
}