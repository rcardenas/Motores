    //$output = '<p>'.  t("motores_bancario is a simple module to test functions and pages in Drupal");
    //    The line above outputs in ALL admin/module pages
    switch ($path) {
        case "admin/help/motores_bancario":
        $output = '<p>'.  t("motores_bancario is a simple module to test functions and pages in Drupal") .'</p>';
            break;
    }
    return $output;
} // function motores_bancario_help

