function motores_search_refine_form( $form_state )
{
  $form['top'] = array(
    '#value' => '<h3>Usados</h3>'
  );
  
  // Palabra clave
  $form['keywords'] = array(
    '#title' => t('Búsqueda por palabra'),
    '#type' => 'textfield'
  );
  
  // Estados
  $estados = array( '-1' => 'Estado' );
  foreach ( taxonomy_get_tree('1') as $edo )
  {
    $estados[ $edo->tid ] = $edo->name;
  }
  $form['estado'] = array(
    '#type' => 'select',
    '#title' => t('Búsqueda por'),
    '#options' => $estados
  );
  
  // Marca y modelo
  $marcas = array( '-1' => 'Marca' );
  foreach ( taxonomy_get_tree('3') as $m )
  {
    $p = ( $m->depth ) ? '- ' : ''; 
    $marcas[ $m->tid ] = $p.$m->name;
  }
  $form['marcas'] = array(
    '#type' => 'select',
    '#options' => $marcas
  );
  
  // Precio desde y hasta
  $precios = array(
      '10000' => '10,000',
      '20000' => '20,000',
      '30000' => '30,000',
      '40000' => '40,000',
      '50000' => '50,000',
      '60000' => '60,000',
      '70000' => '70,000',
      '80000' => '80,000',
      '90000' => '90,000',
      '100000' => '100,000',
      '110000' => '110,000',
      '120000' => '120,000',
      '130000' => '130,000',
      '140000' => '140,000',
      '150000' => '150,000',
      '175000' => '175,000',
      '200000' => '200,000',
      '220500' => '220,500',
      '250000' => '250,000',
      '300000' => '300,000'
  );
  $form['precio_min'] = array(
    '#type' => 'select',
    '#options' => array('-1'=>'Precio desde') + $precios
  );
  $form['precio_max'] = array(
    '#type' => 'select',
    '#options' => array('-1'=>'Precio hasta') + $precios
  );  
  
  // Anio desde y hasta
  $anios = array();
  for ( $a = '1950'; $a <= date('Y'); $a++ )
    $anios[$a] = $a;
  $form['year_min'] = array(
    '#type' => 'select',
    '#options' => array('-1'=>'Año desde') + $anios
  );
  $form['year_max'] = array(
    '#type' => 'select',
    '#options' => array('-1'=>'Año hasta') + $anios
  ); 
  
  // KM desde y hasta
  $kms = array(
      '10000' => '10,000',
      '20000' => '20,000',
      '30000' => '30,000',
      '40000' => '40,000',
      '50000' => '50,000',
      '60000' => '60,000',
      '70000' => '70,000',
      '80000' => '80,000',
      '90000' => '90,000',
      '100000' => '100,000',
      '110000' => '110,000',
      '120000' => '120,000',
      '130000' => '130,000',
      '140000' => '140,000',
      '150000' => '150,000',
      '175000' => '175,000',
      '200000' => '200,000',
      '220500' => '220,500',
      '250000' => '250,000',
      '300000' => '300,000',
      '350000' => '350,000'
  );
  $form['km_min'] = array(
    '#title' => t('Kilometraje'),
    '#type' => 'select',
    '#options' => array('-1'=>'Desde') + $kms
  );
  $form['km_max'] = array(
    '#type' => 'select',
    '#options' => array('-1'=>'Hasta') + $kms
  );  
  
  // checkboxes
  $form['options'] = array(
    '#type' => 'checkboxes',
    '#options' =>
    array(
      'agencias' => t('Agencias y lotes'),
      'particular' => t('Particular'),
      'credito' => t('Sólo autos a crédito'),
      'foto' => t('Con foto')
    )
  );
  
  // Submit
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('¡Buscar!')
  );
  
  return $form;
}

function motores_search_refine_form_submit( $form, &$form_state )
{
  $f = array();
  
  // Filters
  if ( $_POST['marcas'] != '-1' )     $f['marca'] = $_POST['marcas'];
  if ( $_POST['keywords'] )           $f['keys'] = $_POST['keywords'];
  if ( $_POST['estado'] != '-1' )     $f['edo'] = $_POST['estado'];
  if ( $_POST['precio_min'] != '-1' ) $f['precio[min]'] = $_POST['precio_min'];
  if ( $_POST['precio_max'] != '-1' ) $f['precio[max]'] = $_POST['precio_max'];
  if ( $_POST['year_min'] != '-1' )   $f['anio[min]'] = $_POST['year_min'];
  if ( $_POST['year_max'] != '-1' )   $f['anio[max]'] = $_POST['year_max'];
  if ( $_POST['km_min'] != '-1' )     $f['km[min]'] = $_POST['km_min'];
  if ( $_POST['km_max'] != '-1' )     $f['km[max]'] = $_POST['km_max'];
  
  drupal_goto('busqueda/carro'.$args, http_build_query($f,'','&'));
}